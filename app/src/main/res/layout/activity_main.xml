<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Lutemon"
        android:textColor="#000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/createLutemonButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="#4CAF50"
        android:padding="12dp"
        android:text="Create Lutemon"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/trainLutemonButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createLutemonButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#008577"
        android:padding="12dp"
        android:text="Train Lutemon"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/battleButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainLutemonButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#C62828"
        android:padding="12dp"
        android:text="Battle"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/viewLutemonsButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/battleButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#3F51B5"
        android:padding="12dp"
        android:text="View Lutemons"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/storageButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewLutemonsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#2196F3"
        android:padding="12dp"
        android:text="Lutemon Storage"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/trainingAreaButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#FF9800"
        android:padding="12dp"
        android:text="Training Area"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</RelativeLayout>